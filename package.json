{
  "name": "audiotoolheadless",
  "version": "1.0.0",
  "description": "A modern, headless audio player with HLS support, equalizer, queue management, and media session integration",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node --enable-source-maps dist/index.js",
    "lint": "biome lint ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "docs": "typedoc",
    "docs:clean": "rimraf docs",
    "predocs": "pnpm run docs:clean",
    "test": "echo \"No tests created\" && exit 1",
    "validate": "pnpm run typecheck && pnpm run build",
    "validate:strict": "pnpm run lint && pnpm run typecheck && pnpm run build",
    "prepack": "pnpm run validate",
    "prepublishOnly": "pnpm run validate",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "publish:npm": "npm publish",
    "publish:dry": "npm publish --dry-run",
    "publish:beta": "npm publish --tag beta",
    "publish:next": "npm publish --tag next",
    "version:check": "npm version --no-git-tag-version",
    "size:check": "npx package-size ./dist",
    "prepare": "lefthook install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shindigira/audioToolHeadless.git"
  },
  "homepage": "https://github.com/shindigira/audioToolHeadless#readme",
  "bugs": {
    "url": "https://github.com/shindigira/audioToolHeadless/issues"
  },
  "author": "shindigira",
  "license": "MIT",
  "keywords": [
    "audio",
    "player",
    "headless",
    "hls",
    "equalizer",
    "typescript",
    "media-session",
    "queue",
    "streaming",
    "html5-audio"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "lefthook": "^1.5.5",
    "release-it": "^17.0.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typedoc": "^0.28.12",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "hls.js": "^1.6.11"
  }
}
